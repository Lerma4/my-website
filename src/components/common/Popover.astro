---
interface Props {
    label: string,
}

const {
    label
} = Astro.props;
---

<div class="relative group">
    <div class="absolute bottom-14 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-200">
        {label}
    </div>
    <slot />
</div>
